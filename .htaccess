RewriteEngine On

# Redireciona a raiz (/) para /index
RewriteRule ^$ /index [R=301,L]

# Trata /index para servir index.php (que por sua vez serve index.html)
RewriteRule ^index/?$ index.php [L]

# Remove a extensão .html de outras requisições
# Verifica se o arquivo .html correspondente existe
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/$1.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# Se não for .html, e for index, serve index.php (caso a regra anterior para index não pegue)
# Esta regra pode ser redundante se a de cima para /index/?$ já funciona bem.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]